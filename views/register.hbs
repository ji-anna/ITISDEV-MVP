<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register to E. Razon Parking</title>
    <link rel="stylesheet" href="css styles/register.css">
</head>
<body>
    <div class="container">
        <div class="logo-container">
            <div class="box">
                <div class="in-box">
                    <img src="assets/dlsu logo.PNG" >
                </div>
            </div>
        </div>

        <div class="form-container">
            <h1>REGISTER USER</h1>
            <form id="registerForm" action="/submit-registration" method="POST" enctype="multipart/form-data">
                <label for="userId">User ID:</label>
                <input type="text" id="userId" name="userId" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>

                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="role">Role:</label>
                <select id="role" name="role" required>
                    <option value="" disabled selected>Select your role</option>
                    <option value="student">Student</option>
                    <option value="technician">Lab Technician</option>
                </select>

                <!-- Car Plate Number input, hidden by default -->
                <div id="carPlateContainer" style="display: none;">
                    <label for="carPlate">Car Plate Number:</label>
                    <input type="text" id="carPlate" name="carPlate">
                </div>

                <label for="department">Department:</label>
                <input type="text" id="department" name="department" required>

                <label for="image">Profile Image:</label>
                <input type="file" id="image" name="image">

                <div class="button-grp">
                    <button type="submit" class="button">Register</button>
                    <button type="button" class="button" id="cancel">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="js files/main.js"></script>
    <script src="js files/cancelBtn.js"></script>
    <script>
        // Show or hide the Car Plate Number input based on the selected role
        document.getElementById('role').addEventListener('change', function () {
            const carPlateContainer = document.getElementById('carPlateContainer');
            if (this.value === 'student') {
                carPlateContainer.style.display = 'block'; // Show the input for student
            } else {
                carPlateContainer.style.display = 'none';  // Hide it for Lab Technician
            }
        });
    </script>
</body>
</html>
